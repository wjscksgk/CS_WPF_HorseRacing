             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:horse_racing.userControl"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60" Width="60">
    <Grid>
        <StackPanel x:Name="sp">
            <WrapPanel>
                <TextBlock Width="30" Height="27" Background="White"></TextBlock>
                <TextBlock Width="30" Height="27" Background="Black"></TextBlock>
                <TextBlock Width="30" Height="27" Background="Black"></TextBlock>
                <TextBlock Width="30" Height="27" Background="White"></TextBlock>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
