<Window x:Class="horse_racing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:horse_racing"
        mc:Ignorable="d"
        Title="HorseRacing" Height="600" Width="1200" x:Name="window">
    <Grid x:Name="grid">
        <StackPanel Loaded="OnLoad">
            <Frame Height="450" Width="1200" x:Name="frame" NavigationUIVisibility="Hidden" />
            <StackPanel x:Name="sp" Orientation="Horizontal" Margin="0,15">
                <StackPanel x:Name="statBlock" Width="500" Height="80" Background="#FFFF7C7C" Margin="50,0,500,0" Orientation="Horizontal">
                    <TextBlock Text="말을 선택하면 선택한 말의 정보를 볼 수 있습니다." FontSize="20" Margin="20,30,0,0" />
                </StackPanel>
                <Button Click="StartButton_Click" x:Name="startButton" Content="시작" Width="100" Height="40"/>
            </StackPanel>
        </StackPanel>
        <TextBlock x:Name="countBlock" Foreground="Olive" FontSize="30" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
